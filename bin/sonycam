#!/usr/bin/env ruby

$:.unshift(File.join(File.dirname(__FILE__), "/../lib"))
require 'sony_camera_remote'

verbose = true

begin
  SonyCameraRemote::Discovery::Client.new(ARGV[0]).discover.each do |camera|
    puts camera
  end
rescue
  STDERR.puts("Error: #{$!}")

  if verbose
    $!.backtrace.each do |b|
      STDERR.puts(b)
    end
  end
end
